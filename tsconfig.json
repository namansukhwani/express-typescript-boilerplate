{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop":true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "incremental": true,
    "moduleResolution":"node",
    "noImplicitAny": false,
    "types": ["node"],
 
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
      "./plugins/**/*",
      "./typings/**/*",
      "./dist/**/*",
  ]
}