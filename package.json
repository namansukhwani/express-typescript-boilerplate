{
  "name": "express-boilerplate",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start:dev": "ts-node ./src/bin/www.ts",
    "watch:dev": "nodemon ./src/bin/www.ts",
    "start": "node ./dist/src/bin/www.js",
    "dependencies:clean": "rimraf package-lock.json && rimraf node_modules",
    "dependencies:install": "npm i",
    "build": "npm-run-all clean compile postbuildcopy",
    "compile": "npx tsc",
    "postbuildcopy": "npm-run-all copyPublic copyViews",
    "copyPublic": "copyfiles -u 1 \"./src/public/**\" \"./dist/src/\" ",
    "copyViews": "copyfiles -u 1 \"./src/views/**\" \"./dist/src/\" ",
    "clean": "rimraf dist/*",
    "deploy": "git push heroku main",
    "postinstall": "npm audit fix",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "dependencies": {
    "axios": "^1.1.3",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.6",
    "cors": "^2.8.5",
    "debug": "~4.3.4",
    "dotenv": "^16.0.3",
    "express": "~4.18.2",
    "http-errors": "~2.0.0",
    "jade": "~1.11.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.14",
    "@types/http-errors": "^1.8.2",
    "@types/lodash": "^4.14.186",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.16.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
