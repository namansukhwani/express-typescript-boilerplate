{
  "name": "voting-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start:dev": "ts-node ./src/bin/www.ts",
    "watch:dev": "nodemon ./src/bin/www.ts",
    "start": "node ./dist/src/bin/www.js",
    "dependencies:clean": "rimraf package-lock.json && rimraf node_modules",
    "dependencies:install": "npm i",
    "build": "npm-run-all clean compile postbuildcopy",
    "compile": "npx tsc",
    "postbuildcopy": "npm-run-all copyPublic copyViews",
    "copyPublic": "copyfiles -u 1 \"./src/public/**\" \"./dist/src/\" ",
    "copyViews": "copyfiles -u 1 \"./src/views/**\" \"./dist/src/\" ",
    "clean": "rimraf dist/*",
    "deploy": "git push heroku main"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "cookie-parser": "~1.4.6",
    "cors": "^2.8.5",
    "debug": "~4.3.4",
    "dotenv": "^16.0.0",
    "ethers": "^5.6.2",
    "express": "~4.17.3",
    "http-errors": "~2.0.0",
    "jade": "~1.11.0",
    "lodash": "^4.17.21",
    "morgan": "~1.10.0",
    "web3": "^1.7.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/lodash": "^4.14.180",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  }
}
